{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "gcc", "gomp", "glibc", "nodejs", "npm"]
        },
        "install": {
          "cmds": [
            "apt-get update && apt-get install -y nodejs npm",
            "pip install -r requirements.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn VisAutoML.wsgi",
    "env": {
      "PORT": "8000",
      "API_BASE_URL": "https://visautomlbackend-production.up.railway.app/",
      "BACKEND_BASE_URL": "https://visautomlbackend-production.up.railway.app/api/",
      "RAILWAY_ENVIRONMENT": "production",
      "ALLOWED_HOSTS": "visautomlbackend-production.up.railway.app"
    }
  }
}
